<div class="container p-3">
  <h1><strong>My bookings</strong></h1>
  <br>
  <% @bookings.each do |booking| %>
    <div class="booking-card d-flex justify-content-between align-items-center bd-highlight">
      <div class="card-product my-4">
      <%= image_tag "https://images.unsplash.com/photo-1511885663737-eea53f6d6187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1567&q=80" %>
        <div class="card-product-infos">
          <h2><%= booking.lama.title %></h2>
          <p>From <strong><%= booking.start %></strong> to <strong><%= booking.end %></strong></p>
          <p>Total price : <strong><%= booking.lama.price %>â‚¬</strong></p>
          <p>For : <strong><%= booking.number_of_users %></strong></p>
          <p>With : <strong><%= booking.driver_manager %></strong></p>
        </div>
      </div>
      <div class="card-booking-status text-center"><p>Booking status</p><i class="fas fa-hourglass-half fa-3x"></i></i></div>
    </div>
  <% end %>
</div>
