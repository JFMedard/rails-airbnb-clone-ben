<div class="container">
  <br>
  <br>
  <br>
  <div class="card-lama" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(https://images.unsplash.com/photo-1511885663737-eea53f6d6187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1567&q=80)"></div>
  <div class="lama-details d-flex justify-content-between">
    <div class="lama-description bg-white col-7 my-4 py-3 px-5 border-rounded">
      <div class="lama-name mb-5">
        <h1><%= @lama.title %></h1>
        <p><%= @lama.description %></p>
      </div>
      <div class="lama-infos d-flex justify-content-between align-items-end">
        <div class="lama-location-people">
          <p><i class="fas fa-user-friends"></i> <%= @lama.capacity %> travellers</p>
          <p><i class="fas fa-map-marker-alt"></i> <%= @lama.address %></p>
        </div>
        <h2><%= @lama.price %>â‚¬ / day</h2>
      </div>
    </div>
    <div class="form-booking bg-white col-4 border-rounded">
      <div class="form-group">
        <h1>Book me :</h1>
        <%= simple_form_for [@lama, @booking] do |f| %>
          <%= f.input :start, as: :string, required: false, input_html: { id: "range_start" } %>
          <%= f.input :end, as: :string, required: false, input_html: { id: "range_end" } %>
          <%= f.input :number_of_users %>
          <%= f.input :driver_manager %>
          <h4><%= @booking["end"] %></h4>
          <div class="form-actions">
          <%= f.button :submit, "Book #{@lama.title}", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

