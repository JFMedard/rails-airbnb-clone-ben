<div class="container pt-5">
  <h1><strong>Lamas</strong> in <%= params[:search] %></h1>
  <h3><%= @lamas.count %> ðŸ¦™</h3>
  <div class="main-container">
        <div class="cards">
          <% @lamas.each do |lama|  %>
            <%= link_to lama_path(lama) do %>
            <div class="card">
            <% if lama.photos.first %>
              <%= cl_image_tag lama.photos.first.key, crop: :fill, class: "card-img-top"%>
            <% else %>
              <img src="https://images.unsplash.com/photo-1546273703-d2658be9de64?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=670&q=80" class="card-img-top" alt="lama">
            <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= lama.title %></h5>
                <p class="card-text">$ <%= "#{lama.price}0" %> / day</p>
              </div>
            </div>
            <% end %>
          <% end %>
        </div>
        <div class="map">
          <img id="map" src='https://raw.githubusercontent.com/lewagon/layouts-demo/gh-pages/images/mapbox.png' style="height: 800px">
        </div>
  </div>
</div>

