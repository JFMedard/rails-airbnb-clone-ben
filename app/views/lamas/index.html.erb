<div class="container pt-5">
  <h1><strong>Lamas</strong> in <%= params[:search] %></h1>
  <h3><%= @lamas.count %> ðŸ¦™</h3>
  <div class="main-container">
        <div class="cards">
          <% @lamas.each do |lama|  %>
            <%= link_to lama_path(lama) do %>
            <div class="card">
              <% if lama.photos.attached? %>
              <img src="<%= cl_image_path current_user.photo.key, height: 50, width: 50, crop: :fill %>" class="card-img-top" alt="lama">
              <% else %>

              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= lama.title %></h5>
                <p class="card-text">$ <%= "#{lama.price}0" %> / day</p>
              </div>
            </div>
            <% end %>
          <% end %>
        </div>
        <div class="map">
          <img id="map" src='https://raw.githubusercontent.com/lewagon/layouts-demo/gh-pages/images/mapbox.png' style="height: 800px">
        </div>
  </div>
</div>

